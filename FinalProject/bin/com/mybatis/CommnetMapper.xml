<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.BlogMapper">
  
<!--조회-->
  
  <select id="findAll" resultType="com.dto.CommentDTO">
  	 <!--SQL 컬럼명과 CommentDTO의 변수명이 같은 경우 자동저장 다르면 저장안됨!!-->
  	 <!--별표도 댐!!-->
    select * from Comment where UID = #{UID}
  </select>
  
  <select id="findAllDesc" resultType="com.dto.CommentDTO">
    select * from Comment order by UID desc
    
  <!--#블럭이 있는 경우 parameterType작성 필수-->
  </select>
    <select id="findByUID" parameterType="int" resultType="com.dto.CommentDTO">
    select * from Comment where UID = #{UID}
  </select>
  
 <!--저장--> 
  <insert id="insert" parameterType="com.dto.CommentDTO" >
  	insert into Comment (UID, CID, reply)
  	values (#{UID},#{CID},#{reply})
  </insert>
  
 <!--수정--> 
  <update id="update" parameterType="com.dto.CommentDTO" >
  	update Comment
  	set Comment = #{reply}
  	where UID = #{UID} and PW = #{PW}
  </update> 
  
 <!--삭제--> 
 <!--자바코드에서 전달한 ID에 값을 가져와서 #{ID}에 치환하고
 	전달 타입을 parameterType에 지정한다.--> 
 
  <delete id="delete">
  	delete from Comment
  	where ID = #{ID} and PW = #{PW}
  </delete>   
  
  
  
</mapper>

<!--SQL 데이터를 입력1jdbc.properties 등록-->