<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.BlogMapper">
  
<!--조회-->
  
  <select id="findAll" resultType="com.dto.CampDTO">
  	 <!--SQL 컬럼명과 CampDTO의 변수명이 같은 경우 자동저장 다르면 저장안됨!!-->
  	 <!--별표도 댐!!-->
    select * from camp 
  </select>
  
  <select id="findAllDesc" resultType="com.dto.CampDTO">
    select * from camp order by CID desc
    
  <!--#블럭이 있는 경우 parameterType작성 필수-->
  </select>
    <select id="findByCID" parameterType="int" resultType="com.dto.CampDTO">
    select * from camp where CID = #{CID}
  </select>
  
 <!--저장--> 
  <insert id="insert" parameterType="com.dto.CampDTO" >
  	insert into camp (CID, name, address)
  	values (#{CID},#{name},#{address})
  </insert>
  
 <!--수정--> 
  <update id="update" parameterType="com.dto.CampDTO" >
  	update camp
  	set camp = #{name}, address = #{address}
  	where CID = #{CID}
  </update> 
  
 <!--삭제--> 
 <!--자바코드에서 전달한 CID에 값을 가져와서 #{CID}에 치환하고
 	전달 타입을 parameterType에 지정한다.--> 
 
  <delete id="delete">
  	delete from camp
  	where CID = #{CID}
  </delete>   
  
  
  
</mapper>

<!--SQL 데이터를 입력1jdbc.properties 등록-->